<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>åœ£è¯å¿«ä¹ | æ¢¦å¹»åœ£è¯æ ‘</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            user-select: none;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #05073a 0%, #1a1a40 100%);
            font-family: "Inter", "Microsoft YaHei", sans-serif;
            overflow: hidden; /* éšè—é›ªèŠ±è¶…å‡ºéƒ¨åˆ† */
        }

        /* é›ªèŠ±å®¹å™¨ */
        .snow-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            pointer-events: none; /* é›ªèŠ±ä¸é®æŒ¡ç‚¹å‡» */
            z-index: 1;
            display: none; /* åˆå§‹éšè—ï¼Œç‚¹å‡»åæ˜¾ç¤º */
        }

        /* é›ªèŠ±æ ·å¼ - éšæœºå¤§å°/é€æ˜åº¦/é€Ÿåº¦ */
        .snowflake {
            position: absolute;
            top: -10px;
            color: #fff;
            opacity: 0;
            font-size: 12px;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
            animation: snowfall linear infinite;
        }

        /* åˆå§‹æŒ‰é’®æ ·å¼ */
        .enter-btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px 45px;
            background: linear-gradient(120deg, #e94560, #d63384);
            color: white;
            font-size: 28px;
            border: none;
            border-radius: 60px;
            cursor: pointer;
            box-shadow: 0 8px 30px rgba(214, 51, 132, 0.5);
            transition: all 0.4s ease;
            z-index: 10;
            text-align: center;
            text-decoration: none;
        }

        .enter-btn:hover {
            transform: translate(-50%, -50%) scale(1.08);
            box-shadow: 0 12px 40px rgba(233, 69, 96, 0.7);
            background: linear-gradient(120deg, #ff577f, #e94560);
        }

        /* åœ£è¯æ ‘å®¹å™¨ */
        .christmas-tree-wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            z-index: 5;
            perspective: 1000px; /* 3Dé€è§†æ•ˆæœ */
        }

        /* åœ£è¯æ ‘ä¸»ä½“ */
        .christmas-tree {
            position: relative;
            transform-style: preserve-3d;
            animation: treeSway 8s ease-in-out infinite alternate;
        }

        /* é¡¶éƒ¨æ˜Ÿæ˜Ÿ - å¸¦å…‰æ™•+æ—‹è½¬ */
        .star {
            position: absolute;
            top: -40px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            border-bottom: 60px solid #ffd700;
            filter: drop-shadow(0 0 10px #ffeb3b);
            animation: starSpin 6s linear infinite, starGlow 2s ease-in-out infinite alternate;
            z-index: 2;
        }

        .star::after {
            content: '';
            position: absolute;
            top: 12px;
            left: -30px;
            width: 0;
            height: 0;
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            border-top: 60px solid #ffd700;
            filter: drop-shadow(0 0 10px #ffeb3b);
        }

        /* æ ‘å±‚ - å¤šå±‚æ¸å˜+ç«‹ä½“é˜´å½± */
        .tree-layer {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 50% 50% 0 0;
            filter: drop-shadow(0 5px 8px rgba(0, 0, 0, 0.3));
        }

        .layer-1 {
            width: 220px;
            height: 120px;
            background: linear-gradient(135deg, #1e7c41 0%, #2e8b57 100%);
            top: 0;
            border-radius: 50% 50% 0 0;
        }

        .layer-2 {
            width: 180px;
            height: 100px;
            background: linear-gradient(135deg, #2da160 0%, #3cb371 100%);
            top: 40px;
        }

        .layer-3 {
            width: 140px;
            height: 80px;
            background: linear-gradient(135deg, #46c778 0%, #90ee90 100%);
            top: 80px;
        }

        .layer-4 {
            width: 100px;
            height: 60px;
            background: linear-gradient(135deg, #70e070 0%, #98fb98 100%);
            top: 120px;
        }

        /* æ ‘å¹² - å¸¦çº¹ç†+ç«‹ä½“æ•ˆæœ */
        .trunk {
            position: absolute;
            bottom: -80px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 80px;
            background: linear-gradient(90deg, #8b4513 0%, #a0522d 50%, #8b4513 100%);
            border-radius: 8px 8px 12px 12px;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5), 0 5px 8px rgba(0, 0, 0, 0.3);
        }

        /* å½©ç¯ - å¤šè‰²+ç»†è…»é—ªçƒ+å…‰æ™• */
        .light {
            position: absolute;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            filter: drop-shadow(0 0 6px currentColor);
            animation: lightBlink 2s ease-in-out infinite alternate;
        }

        .light-red {
            top: 30px;
            left: 20%;
            background-color: #ff3333;
            color: #ff3333;
            animation-delay: 0s;
        }

        .light-green {
            top: 60px;
            left: 80%;
            background-color: #33ff33;
            color: #33ff33;
            animation-delay: 0.3s;
        }

        .light-blue {
            top: 90px;
            left: 15%;
            background-color: #3333ff;
            color: #3333ff;
            animation-delay: 0.6s;
        }

        .light-pink {
            top: 120px;
            left: 85%;
            background-color: #ff33cc;
            color: #ff33cc;
            animation-delay: 0.9s;
        }

        .light-yellow {
            top: 50px;
            left: 50%;
            background-color: #ffff33;
            color: #ffff33;
            animation-delay: 0.15s;
        }

        .light-purple {
            top: 80px;
            left: 65%;
            background-color: #9933ff;
            color: #9933ff;
            animation-delay: 0.45s;
        }

        .light-orange {
            top: 110px;
            left: 35%;
            background-color: #ff9933;
            color: #ff9933;
            animation-delay: 0.75s;
        }

        /* ç¤¼ç‰©ç›’ - ç«‹ä½“+æ¸å˜+ä¸å¸¦ */
        .gift-box {
            position: absolute;
            bottom: -90px;
            width: 50px;
            height: 50px;
            border-radius: 5px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            animation: giftFloat 3s ease-in-out infinite alternate;
        }

        .gift-1 {
            left: -80px;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            animation-delay: 0s;
        }

        .gift-2 {
            left: 50px;
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            animation-delay: 0.5s;
        }

        .gift-3 {
            left: -20px;
            background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
            animation-delay: 1s;
        }

        /* ç¤¼ç‰©ä¸å¸¦ */
        .gift-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 10px;
            height: 100%;
            background: #fff;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
        }

        .gift-box::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            width: 100%;
            height: 10px;
            background: #fff;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
        }

        /* åŠ¨ç”»å®šä¹‰ */
        /* é›ªèŠ±é£˜è½ */
        @keyframes snowfall {
            0% {
                top: -10px;
                opacity: 0;
                transform: translateX(0) rotate(0deg);
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                top: 100vh;
                opacity: 0;
                transform: translateX(50px) rotate(360deg);
            }
        }

        /* æ˜Ÿæ˜Ÿæ—‹è½¬+å…‰æ™• */
        @keyframes starSpin {
            0% { transform: translateX(-50%) rotate(0deg); }
            100% { transform: translateX(-50%) rotate(360deg); }
        }

        @keyframes starGlow {
            0% { filter: drop-shadow(0 0 10px #ffeb3b); }
            100% { filter: drop-shadow(0 0 20px #ffff88); }
        }

        /* åœ£è¯æ ‘è½»å¾®æ™ƒåŠ¨ */
        @keyframes treeSway {
            0% { transform: rotateY(-5deg); }
            100% { transform: rotateY(5deg); }
        }

        /* å½©ç¯é—ªçƒ */
        @keyframes lightBlink {
            0% {
                transform: scale(0.8);
                opacity: 0.7;
            }
            100% {
                transform: scale(1.2);
                opacity: 1;
            }
        }

        /* ç¤¼ç‰©ç›’æµ®åŠ¨ */
        @keyframes giftFloat {
            0% { transform: translateY(0); }
            100% { transform: translateY(-10px); }
        }

        /* å“åº”å¼é€‚é… - ç§»åŠ¨ç«¯ç¼©æ”¾ */
        @media (max-width: 768px) {
            .layer-1 { width: 160px; height: 90px; }
            .layer-2 { width: 130px; height: 75px; top: 30px; }
            .layer-3 { width: 100px; height: 60px; top: 60px; }
            .layer-4 { width: 70px; height: 45px; top: 90px; }
            
            .star {
                border-left: 20px solid transparent;
                border-right: 20px solid transparent;
                border-bottom: 40px solid #ffd700;
            }
            .star::after {
                border-left: 20px solid transparent;
                border-right: 20px solid transparent;
                border-top: 40px solid #ffd700;
            }

            .trunk { width: 30px; height: 60px; bottom: -60px; }
            .gift-box { width: 40px; height: 40px; bottom: -70px; }
            .enter-btn { font-size: 22px; padding: 15px 35px; }
        }

        @media (max-width: 480px) {
            .layer-1 { width: 120px; height: 70px; }
            .layer-2 { width: 90px; height: 55px; top: 25px; }
            .layer-3 { width: 60px; height: 40px; top: 50px; }
            .layer-4 { width: 40px; height: 30px; top: 75px; }
            
            .star {
                border-left: 15px solid transparent;
                border-right: 15px solid transparent;
                border-bottom: 30px solid #ffd700;
            }
            .star::after {
                border-left: 15px solid transparent;
                border-right: 15px solid transparent;
                border-top: 30px solid #ffd700;
            }
        }
    </style>
</head>
<body>
    <!-- åˆå§‹è¿›å…¥æŒ‰é’® -->
    <button class="enter-btn" id="enterBtn">ğŸ„ ç‚¹å‡»å¼€å¯åœ£è¯é­”æ³• ğŸ„</button>

    <!-- é›ªèŠ±å®¹å™¨ -->
    <div class="snow-container" id="snowContainer"></div>

    <!-- åœ£è¯æ ‘å®¹å™¨ -->
    <div class="christmas-tree-wrapper" id="treeWrapper">
        <div class="christmas-tree">
            <!-- æ˜Ÿæ˜Ÿ -->
            <div class="star"></div>

            <!-- æ ‘å±‚ -->
            <div class="tree-layer layer-1">
                <div class="light light-red"></div>
                <div class="light light-green"></div>
            </div>
            <div class="tree-layer layer-2">
                <div class="light light-blue"></div>
                <div class="light light-yellow"></div>
            </div>
            <div class="tree-layer layer-3">
                <div class="light light-pink"></div>
                <div class="light light-purple"></div>
            </div>
            <div class="tree-layer layer-4">
                <div class="light light-orange"></div>
            </div>

            <!-- æ ‘å¹² -->
            <div class="trunk"></div>

            <!-- ç¤¼ç‰©ç›’ -->
            <div class="gift-box gift-1"></div>
            <div class="gift-box gift-2"></div>
            <div class="gift-box gift-3"></div>
        </div>
    </div>

    <script>
        // è·å–DOMå…ƒç´ 
        const enterBtn = document.getElementById('enterBtn');
        const snowContainer = document.getElementById('snowContainer');
        const treeWrapper = document.getElementById('treeWrapper');

        // ç‚¹å‡»æŒ‰é’®è§¦å‘æ•ˆæœ
        enterBtn.addEventListener('click', () => {
            // éšè—æŒ‰é’®
            enterBtn.style.opacity = 0;
            setTimeout(() => {
                enterBtn.style.display = 'none';
            }, 400);

            // æ˜¾ç¤ºé›ªèŠ±å’Œåœ£è¯æ ‘
            snowContainer.style.display = 'block';
            treeWrapper.style.display = 'block';
            
            // åœ£è¯æ ‘æ·¡å…¥æ•ˆæœ
            treeWrapper.style.opacity = 0;
            treeWrapper.style.transform = 'translate(-50%, -50%) scale(0.8)';
            treeWrapper.style.transition = 'all 0.8s ease-out';
            setTimeout(() => {
                treeWrapper.style.opacity = 1;
                treeWrapper.style.transform = 'translate(-50%, -50%) scale(1)';
            }, 200);

            // ç”Ÿæˆé›ªèŠ±
            createSnowflakes();
        });

        // ç”Ÿæˆéšæœºé›ªèŠ±
        function createSnowflakes() {
            // é›ªèŠ±æ•°é‡ï¼ˆæ ¹æ®å±å¹•å®½åº¦é€‚é…ï¼‰
            const snowCount = window.innerWidth < 768 ? 80 : 150;
            
            for (let i = 0; i < snowCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('snowflake');
                
                // éšæœºé›ªèŠ±å­—ç¬¦ï¼ˆâ„ï¸/â…/â†ï¼‰
                const snowChars = ['â„ï¸', 'â…', 'â†'];
                snowflake.textContent = snowChars[Math.floor(Math.random() * snowChars.length)];
                
                // éšæœºæ ·å¼
                const size = Math.random() * 10 + 8; // 8-18px
                const left = Math.random() * 100; // 0-100%
                const duration = Math.random() * 15 + 10; // 10-25ç§’
                const delay = Math.random() * 20; // 0-20ç§’å»¶è¿Ÿ
                const opacity = Math.random() * 0.8 + 0.2; // 0.2-1.0é€æ˜åº¦

                // åº”ç”¨æ ·å¼
                snowflake.style.fontSize = `${size}px`;
                snowflake.style.left = `${left}%`;
                snowflake.style.animationDuration = `${duration}s`;
                snowflake.style.animationDelay = `${delay}s`;
                snowflake.style.opacity = opacity;

                // æ·»åŠ åˆ°å®¹å™¨
                snowContainer.appendChild(snowflake);

                // é›ªèŠ±å¾ªç¯ï¼ˆç»“æŸåé‡æ–°ç”Ÿæˆï¼‰
                snowflake.addEventListener('animationend', () => {
                    snowflake.remove();
                    setTimeout(() => createSingleSnowflake(), Math.random() * 5000);
                });
            }
        }

        // ç”Ÿæˆå•ä¸ªé›ªèŠ±ï¼ˆè¡¥å……æ¶ˆå¤±çš„é›ªèŠ±ï¼‰
        function createSingleSnowflake() {
            const snowflake = document.createElement('div');
            snowflake.classList.add('snowflake');
            
            const snowChars = ['â„ï¸', 'â…', 'â†'];
            snowflake.textContent = snowChars[Math.floor(Math.random() * snowChars.length)];
            
            const size = Math.random() * 10 + 8;
            const left = Math.random() * 100;
            const duration = Math.random() * 15 + 10;
            const delay = 0;
            const opacity = Math.random() * 0.8 + 0.2;

            snowflake.style.fontSize = `${size}px`;
            snowflake.style.left = `${left}%`;
            snowflake.style.animationDuration = `${duration}s`;
            snowflake.style.animationDelay = `${delay}s`;
            snowflake.style.opacity = opacity;

            snowContainer.appendChild(snowflake);

            snowflake.addEventListener('animationend', () => {
                snowflake.remove();
                setTimeout(() => createSingleSnowflake(), Math.random() * 5000);
            });
        }

        // çª—å£å¤§å°å˜åŒ–æ—¶é‡æ–°é€‚é…
        window.addEventListener('resize', () => {
            // æ¸…ç©ºæ—§é›ªèŠ±ï¼Œé‡æ–°ç”Ÿæˆ
            snowContainer.innerHTML = '';
            if (snowContainer.style.display === 'block') {
                createSnowflakes();
            }
        });
    </script>
</body>
</html>
